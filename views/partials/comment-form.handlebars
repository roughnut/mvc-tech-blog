<form class="comment-form">
  <div class="mb-3">
    <label for="comment-text" class="form-label">Add comment</label>
    <textarea
      class="form-control"
      id="comment-text"
      name="comment-text"
      rows="4"
    ></textarea>
  </div>
  <input type="hidden" id="blogpost_id" value="{{post.id}}">
  <div class="mb-3">
    <button
      type="submit"
      class="btn btn-primary"
    >Submit</button>
  </div>
</form>

<script src="/js/comment.js"></script>