<h1>Your Posts</h1>
<a class="btn" href="/blogs/new">Add new</a>
{{#each posts}}
  <div class="blog-post card card-rounded">
    <h2>{{this.blog_title}}</h2>    
    <p>{{this.blog_text}}</p>
    <p>Author: You(!), {{this.blog_date}}</p>
    <a href="/blogs/edit/{{this.id}}" class="btn">Edit</a>
    <button id="delete-blog" data-id="{{this.id}}" class="btn">Delete</button>
  </div>
      <h3>Comments</h3>
  <div class="blog-comment card card-rounded">
    {{#each this.comments}}
    <p>{{this.comment_text}}</p>
    <p>Author: {{this.user.username}}, {{this.comment_date}}</p>
    {{/each}}
  </div>
{{else}}
  <p>No posts. You should write something!</p>
{{/each}}

<script src="/js/deleteBlog.js"></script>
