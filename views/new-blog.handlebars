<form action="/blogs/submit" method="POST">
    <div>
        <label for="blogTitle">Title:</label>
        <input type="text" id="blogTitle" name="title" required>
    </div>
    <div>
        <label for="blogText">Text:</label>
        <textarea id="blogText" name="text" rows="4" required></textarea>
    </div>
    <button type="submit">Submit</button>
</form>